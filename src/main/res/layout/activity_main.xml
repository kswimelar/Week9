<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/GameCanvas">
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
            android:id="@+id/txtScore"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_blue_bright"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginBottom="203dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/imgMole"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
            android:id="@+id/imgMole"
            android:layout_width="97dp"
            android:layout_height="0dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            app:layout_constraintTop_toBottomOf="@+id/txtScore"
            android:layout_marginBottom="203dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnControl" app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/btnControl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Start"
            app:layout_constraintTop_toBottomOf="@+id/imgMole" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="21dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp" android:layout_marginRight="21dp"/>
</android.support.constraint.ConstraintLayout>